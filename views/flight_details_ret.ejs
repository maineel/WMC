<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Search Results</title>
    <link rel="stylesheet" href="./public/styles/flight_details_ret.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Josefin+Sans:ital,wght@1,600&display=swap"
        rel="stylesheet">
</head>

<body class="body">
    <form method="post" action="/flight_details">
    <div class="top-heading">
        <h1><u>Flight Search Results!</u></h1>
    </div>
    <% flights.forEach(function(element) { %>
    <div class="ret-container">
        <div class="flight-card">
            <div class="airline-details">
                <p class="carriercode" style="margin-top: 100%;"></p>
            </div>
            <div class="depart">
                <img src="./public/images/planet.png" height="50px" width="50px">
                <h4><%= element.departure_code %></h4>
                <h6><%= element.departure_time %></h6>
            </div>
            <div class="middle">
                <img src="./public/images/arrow.png" height="40px">
            </div>
            <div class="land">
                <img src="./public/images/planel.png" height="50px" width="50px">
                <h4><%= element.arrival_code %></h4>
                <h6><%= element.arrival_time %></h6>
            </div>
            <div class="price-details">
                <p class="price"><%= element.total %> <%= element.data_currency %></p>
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Info
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Seats: <%= element.bookableSeats %></a> 
                        <a class="dropdown-item" href="#">Stops: <%= element.stops %></a>
                        <a class="dropdown-item" href="#">Departure Terminal: <%= element.departure_terminal %></a>
                        <a class="dropdown-item" href="#">Arrival Terminal: <%= element.arrival_terminal %></a>
                        <a class="dropdown-item" href="#">ID: <%= element.id %></a>
                    </div>
                </div>
                <button type="submit" name="id" value="<%= element.id %>" class="btn btn-warning" style="text-decoration: none; color: black;">Book</button>
            </div>
        </div>
        <hr class="divider">
        <div class="flight-card">
            <div class="airline-details">
                <p class="carriercode" style="margin-top: 100%;"></p>
            </div>
            <div class="depart">
                <img src="./public/images/planet.png" height="50px" width="50px">
                <h4><%= element.return_departure_code %></h4>
                <h6><%= element.return_departure_time %></h6>
            </div>
            <div class="middle">
                <img src="./public/images/arrow.png" height="40px">
            </div>
            <div class="land">
                <img src="./public/images/planel.png" height="50px" width="50px">
                <h4><%= element.return_arrival_code %></h4>
                <h6><%= element.return_arrival_time %></h6>
            </div>
            <div class="price-details">
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Info
                    </a>
                    <a class="dropdown-item" href="#">Seats: <%= element.bookableSeats %></a> 
                    <a class="dropdown-item" href="#">Stops: <%= element.return_stops %></a>
                    <a class="dropdown-item" href="#">Departure Terminal: <%= element.return_departure_terminal %></a>
                    <a class="dropdown-item" href="#">Arrival Terminal: <%= element.retunr_arrival_terminal %></a>
                    <a class="dropdown-item" href="#">ID: <%= element.id %></a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    </form>
</body>
</html>
